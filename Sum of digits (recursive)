public class solution {

	public static int sumOfDigits(int input){
		// Write your code here
        // int sum=0;
        // while(input!=0){
        //     sum=sum+input%10;
        //     input=input/10;
        // }
        // return sum;
        if(input==0){
            return 0;
        }
        int smallAns=sumOfDigits(input/10);
        return smallAns+input%10;

	}
}
